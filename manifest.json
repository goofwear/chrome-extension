{
  "manifest_version": 2,
  "name": "MEGA",
  "description": "Secure Cloud Storage",
  "version": "1.0.0",
  "content_security_policy": "script-src 'self' 'unsafe-eval' https://*.mega.co.nz/ https://*.mega.is/ https://*.mega.nz/; object-src 'self' 'unsafe-eval' https://*.mega.co.nz/ https://*.mega.is/;",
  "nacl_modules": [{
    "path": "mega",
    "mime_type": "text/html"
  }],
  "permissions": 
  [
    "webRequest",
    "webRequestBlocking",
    "https://mega.is/",
    "https://mega.co.nz/",
    "https://mega.nz/",
    "https://mega.io/",	
    "http://mega.co.nz/",
    "http://mega.is/",
    "http://mega.nz/",
    "http://mega.io/",
    "https://*.mega.co.nz",
    "unlimitedStorage",
    "clipboardWrite"
  ],
  "web_accessible_resources": [
    "mega/secure.html"
  ],
  "homepage_url": "https://mega.nz/",
  "background": {"scripts":["mega.js"]},
  "icons": 
  {
    "16": "images/icon_16.png",
    "48": "images/icon_48.png",
    "128": "images/icon_128.png"
  }
}
